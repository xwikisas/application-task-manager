    <property>
      <code>require(['jquery'], function ($) {
  $(document).on('change', '.task-status', function() {
    console.log("Input just changed. It's data is: " + $(this).data('taskid'));
    let taskId = $(this).data('taskid');
    if (taskId) {
      let checkbox = $(this);

      let restURL = XWiki.currentDocument.getRestURL() + '/tasks/' + taskId + '?status=' + (checkbox.is(':checked') ? 'done' : 'onGoing');

      checkbox.prop("disabled", true);
      $.ajax({
        url: restURL,
        type: 'GET',
        success: function() {
          let not = new XWiki.widgets.Notification("$services.localization.render('taskmanager.notification.statusChange.success')", "done");
        },
        error: function () {
          let not = new XWiki.widgets.Notification("$services.localization.render('taskmanager.notification.statusChange.restFail')", "error");
        },
        complete: function () {
          checkbox.prop("disabled", false);
        }
      });
    } else {
      let not = new XWiki.widgets.Notification("$services.localization.render('taskmanager.notification.statusChange.noId')", "error");
    }
  });
});</code>
